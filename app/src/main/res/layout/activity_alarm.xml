<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient_color"
    android:padding="30dp"
    tools:context=".View.Activity.AlarmActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:contentPadding="10dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <!-- Button & DayOfWeek -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_days_of_week"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_weight="1"
                    android:entries="@array/days_of_week"
                    android:spinnerMode="dropdown" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_time_picker"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="#e6e6e6"
                    app:cardCornerRadius="3dp"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/tv_alarm_time"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:padding="5dp"
                        android:text="20:50"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"/>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <!-- Relay1 Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_alarm_activity_relay1_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="bottom|start"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Röle1" />

                <RadioGroup
                    android:id="@+id/rg_relay1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_relay1_none"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textColor="@color/colorPrimary"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:text="@string/dashboard_default_sensor_value"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay1_on"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textColor="@color/colorPrimary"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:text="Aç"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay1_off"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textColor="@color/colorPrimary"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:text="Kapa"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay1_toggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textColor="@color/colorPrimary"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:text="Değiş"
                        android:textAlignment="center" />
                </RadioGroup>

            </LinearLayout>

            <!-- Relay2 Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_alarm_activity_relay2_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingBottom="5dp"
                    android:gravity="bottom|start"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Röle2" />

                <RadioGroup
                    android:id="@+id/rg_relay2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_relay2_none"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"

                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay2_on"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay2_off"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay2_toggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:textAlignment="center" />
                </RadioGroup>


            </LinearLayout>

            <!-- Relay3 Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_alarm_activity_relay3_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingBottom="5dp"
                    android:gravity="bottom|start"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Röle3" />

                <RadioGroup
                    android:id="@+id/rg_relay3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_relay3_none"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"

                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay3_on"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay3_off"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay3_toggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:textAlignment="center" />
                </RadioGroup>
            </LinearLayout>



            <!-- Relay2 Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_alarm_activity_relay4_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingBottom="5dp"
                    android:gravity="bottom|start"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Röle4" />

                <RadioGroup
                    android:id="@+id/rg_relay4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_relay4_none"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"

                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay4_on"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay4_off"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_relay4_toggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:textAlignment="center" />
                </RadioGroup>


            </LinearLayout>

            <!-- Repeat Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="2"
                    android:text="Tekrar"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_repeat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginEnd="7dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_repeat_none"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textColor="@color/colorPrimary"

                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:text="Yok"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_repeat_daily"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:button="@null"
                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:text="Günlük"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/rb_repeat_weekly"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"  android:textColor="@color/colorPrimary"

                        android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                        android:text="Haftalık"
                        android:textAlignment="center" />
                </RadioGroup>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_save_alarm"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#e6e6e6"
                app:cardCornerRadius="3dp"
               android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:padding="5dp"
                    android:text="Ekle"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

