<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_settings"
    android:tag="fragment_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_color"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#cfd8dc"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_fragment_sensor_name"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_fragment_a_value_label"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_fragment_b_value_label"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_fragment_unit_label"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"

                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_settings_temperature"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_fragment_analog_pin_temperature_label"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>


                <EditText
                    android:id="@+id/et_a_value_temperature"
                    android:tag="a_value_temperature"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_fragment_a_value_label"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_b_value_temperature"
                    android:tag="b_value_temperature"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_fragment_b_value_label"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_temperature_unit"
                    android:tag="unit_temperature"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_fragment_unit_label"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_settings_current"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_fragment_analog_pin_current_label"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/et_a_value_current"
                    android:tag="a_value_current"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_fragment_a_value_label"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_b_value_current"
                    android:tag="b_value_current"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_fragment_b_value_label"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_current_unit"
                    android:tag="unit_current"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_fragment_unit_label"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_settings_voltage"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_fragment_analog_pin_voltage_label"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/et_a_value_voltage"
                    android:tag="a_value_voltage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_fragment_a_value_label"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_b_value_voltage"
                    android:tag="b_value_voltage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_fragment_b_value_label"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_voltage_unit"
                    android:tag="unit_voltage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/settings_fragment_unit_label"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/tv_realtime_clock"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="4 / 9 / 2018 \n23:30:42"
            android:textAlignment="center"

            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_sync_rtc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#e6e6e6"
            app:cardCornerRadius="3dp"
            android:layout_marginEnd="10dp">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_refresh"
                android:padding="5dp"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>